<div class="d-flex" style="min-height: 100vh;">
    <nav class="bg-light border-end" style="width: 250px;">
        <div class="p-3">
            <h4>Меню</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_dashboard') }}">Главная</a>
                </li>
                {% if 'ROLE_OWNER' in app.user.roles %}
                    <li class="nav-item">
                        <a class="nav-link" href="#">Организации</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Сотрудники</a>
                    </li>
                {% endif %}
                {% if 'ROLE_USER' in app.user.roles %}
                    <li class="nav-item">
                        <a class="nav-link" href="#">Профиль</a>
                    </li>
                {% endif %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">Выход</a>
                </li>
            </ul>
        </div>
    </nav>
    <!-- Основной контент -->
    <div class="flex-fill p-3">
        {% block page_content %}{% endblock %}
    </div>
</div>
